<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="db.properties"/>

    <typeAliases>
        <typeAlias type="com.peerfect.vo.AdminVO" alias="adminVO"/>
        <typeAlias type="com.peerfect.vo.AdminFeedbackVO" alias="feedbackVO"/>
        <typeAlias type="com.peerfect.vo.ChallengeVO" alias="challengeVO"/>
        <typeAlias type="com.peerfect.vo.ChallengeMissionVO" alias="missionVO"/>
        <typeAlias type="com.peerfect.vo.UsersVO" alias="usersVO"/>
        <typeAlias type="com.peerfect.vo.UsersUploadVO" alias="uploadVO"/>
        <typeAlias type="com.peerfect.vo.UsersCompleteVO" alias="completeVO"/>
        <typeAlias type="com.peerfect.vo.UsersReviewVO" alias="reviewVO"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>

    </environments>
    <mappers>
        <mapper resource="mapper/adminMapper.xml"/>
        <mapper resource="mapper/adminFeedbackMapper.xml"/>
        <mapper resource="mapper/challengeMapper.xml"/>
        <mapper resource="mapper/challengeMissionMapper.xml"/>
        <mapper resource="mapper/usersMapper.xml"/>
        <mapper resource="mapper/usersUploadMapper.xml"/>
        <mapper resource="mapper/usersCompleteMapper.xml"/>
        <mapper resource="mapper/usersReviewMapper.xml"/>
    </mappers>
</configuration>